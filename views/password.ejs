<% include partials/header.ejs %>

<div class="container">
        <% if (error) { %>
        <div class="alert alert-danger" role="alert">
                <%= error %>
        </div>
        <% } %>
        <div class="row">    
            <h1 class="text-center" style="margin-top: 2.5em;">Change your password</h1>
            <div class="col-md-4 col-sm-6 col-xs-10 col-md-offset-4 col-xs-offset-1">
                <form action="/password" method="post">
                    <div class="form-group">
                            <label class="custom-file-label" for="username">Old password:</label>
                            <input class="form-control" type="password" name="oldPassword" placeholder="Old password">
                    </div> 
                    <div class="form-group">
                            <label class="custom-file-label" for="username">New password:</label>
                            <input class="form-control" type="password" name="newPassword" placeholder="New password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit! </button>
                    </div>
                </form>
                <a class="go-back-btn" href="/">Go back</a>
            </div>
        </div>   
    </div>
    
<% include partials/footer.ejs %>