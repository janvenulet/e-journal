<% include ../partials/header.ejs %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is a campground page</h1>
            <p>View our hand-picked campgounds from USA. Best of them!</p>
            <p>
                <a class="btn btn-lg btn-primary" href="/trips/new">Add new trip to your journal</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap:wrap;">
        <div class="col-lg-12"> 
            <h3>Your trips!</h3>     
        </div>
    

        <% trips.forEach((trip) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">     
                    <img src="file://C:/<%= trip.image %>">
                    <div class="caption">       
                        <h4> <%= trip.title %> </h4>
                    </div>     
                    <p>
                        <a href="/trips/<%= trip._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer.ejs %>