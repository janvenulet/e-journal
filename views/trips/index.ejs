<% include ../partials/header.ejs %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome back to your e-journal <%= currentUser.username %>!</h1>
            <p>Write your best trip's stories to make sure they will stay with you forverer.</p>
            <p>
                <a class="btn btn-lg btn-primary" href="/trips/new">Add new trip to your journal</a>
            </p>
        </div>
    </header>
    <h3>Your trips:</h3> 
    <div class="row text-center" style="display: flex; flex-wrap:wrap;">
        
        <div class="col-lg-12">     
        </div>
        <% var it = 0 %>
        <% trips.forEach((trip) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img class="img-responsive" src="<%= typeof images[it] != 'undefined' ? images[it] : '' %>">
                    <div class="caption">
                        <h4> <%= trip.title %> </h4>
                    </div>
                    <p>
                        <a href="/trips/<%= trip._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
            <% it = it + 1; %>
        <% }); %>
    </div>
</div>

<% include ../partials/footer.ejs %>