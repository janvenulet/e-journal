<% include ../partials/header.ejs %>

<div class="container">
        <div class="row">    
            <h2 style="text-align: center;">Edit your trip: <%= trip.title %></h2>
            <div style="width: 30%; margin: 40px auto;">
                <form method="POST" action="/trips/<%= trip._id %>" enctype="multipart/form-data">
                    <div class="form-group">
                            <input class="form-control" type="text" name="trip[title]" placeholder="name" value="<%= trip.title %>" required >
                    </div> 
                    <div class="form-group">
                            <!-- <input class="form-control"  type="text" name="campground[description]" placeholder="description" value="<%= trip.description %>" > -->    
                        <textarea class="form-control" aria-label="With textarea" name="trip[description]" rows="5" required><%= trip.description %></textarea>
                    </div> 
                    <div class="form-group">
                            <label class="custom-file-label" for="avatar">Choose main journey photo: </label>
                            <input class="custom-file-input" type="file" name="avatar" accept="image/*" >
                    </div> 
                    <div class="form-group">                     
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit! </button>
                    </div>
                    <!-- <input type="hidden" name="_method" value="PUT"> -->
                </form>
                <a class="go-back-btn" href="javascript:history.back()">Go back</a>
            </div>
        </div>   
    </div>

<% include ../partials/footer.ejs %>