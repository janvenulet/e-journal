<% include ../partials/header.ejs %>

<div class="container">
        <div class="row">    
            <h2 style="text-align: center;">Edit <%= trip.title %>! ;)</h2>
            <div style="width: 30%; margin: 40px auto;">
                <form method="POST" action="/trips/<%= trip._id %>">
                    <div class="form-group">
                            <input class="form-control" type="text" name="trip[title]" placeholder="name" value="<%= trip.title %>" >
                    </div> 
                    <div class="form-group">
                            <input class="form-control"  type="text" name="trip[image]" placeholder="image url" value="<%= trip.image %>" >
                    </div> 
                    <div class="form-group">
                            <input class="form-control"  type="text" name="campground[description]" placeholder="description" value="<%= trip.description %>" >
                    </div> 
                    <div class="form-group">                     
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit! </button>
                    </div>
                    <input type="hidden" name="_method" value="PUT">
                </form>
                <a href="/trips">Go back</a>
            </div>
        </div>   
    </div>

<% include ../partials/footer.ejs %>