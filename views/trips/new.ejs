<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">    
        <h2 style="text-align: center;">Add new trip to your journal! ;)</h2>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/trips" method="post" enctype="multipart/form-data">
                <div class="form-group">
                        <input class="form-control" type="text" name="title" placeholder="Trip's title">
                </div> 
                <div class="form-group">
                        <!-- <input class="form-control"  type="text" name="description" placeholder="description" rows="3"> -->
                        <textarea class="form-control" aria-label="With textarea" name="description" rows="5" placeholder="Trip's general description"></textarea>
                </div>
                <div class="form-group">
                            <label class="custom-file-label" for="avatar">Choose main journey photo: </label>
                            <input class="custom-file-input" type="file" name="avatar" accept="image/*" >
                </div> 
                <div class="form-group">                     
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit! </button>
                </div>
            </form>
            <a href="/trips">Go back</a>
        </div>
    </div>   
</div>

<% include ../partials/footer.ejs %>